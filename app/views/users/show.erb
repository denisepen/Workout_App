
    <h1><%= @user.username.capitalize %>'s  Workouts</h1>
    <h3>Total Workout Time: <%= @user.workouts.sum("duration") %> minutes (<%= (@user.workouts.sum("duration").to_f.round(3))/60 %> Hours)</h3>
    <h3>Total Mileage: <%= @user.workouts.sum("mileage") %> miles </h3>

    <% if @bike_wkts %>
    <h4>Total Bike Time: <%= @bike_wkts.sum("duration") %>  </h4>
    <% end %>

    <% @user.workouts.all.each do |wkt| %>
    <a href="/workouts/<%= wkt.id %>">Workout: <%= wkt.workout %>   Duration: <%= wkt.duration %> minutes
     <% if wkt.mileage %>Mileage: <%= wkt.mileage %> miles <% end %> </a> <br>

      <% end %> <br>
      <span></span>

