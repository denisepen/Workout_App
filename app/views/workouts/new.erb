<h1>Create A New Workout</h1>

<form class="" action="/workouts/show" method="post">
  <label for="wkt">Choose The Workout Type From The Dropdown Menu: </label>

    <select id="wkt" name="workout">
      <% @workouts = ["Bike", "Cardio", "Run","Walk", "Weight Training", "Yoga"] %>
      <% @workouts.each do |workout| %>
      <option value="<%= workout %>"><%= workout %></option>
    <% end %>

</select>

  <label for="wkt">Or create a new type of workout: </label>
  <input id="wkt" type="text" name="workout" value=""><br> <br>

  <label for="dur">Workout Duration (minutes)</label>
  <input id="dur" type="text" name="duration" value=""><br> <br>

  <label for="cmt">Comments </label>
  <input id="cmt" type="textarea" name="comment" value=""><br> <br>

  <input type="submit" name="" value="Create New Workout">
</form>

